@model EShopOnWeb.ViewModels.CatalogSearchViewModel

@{
    ViewData["Title"] = "Product Catalog";
}

<div class="container">
    <h1>Product Catalog</h1>
    
    <form method="get" class="mb-4">
        <div class="row">
            <div class="col-md-6">
                <div class="input-group">
                    <input type="text" name="searchTerm" class="form-control" placeholder="Search products..." value="@Model.SearchTerm" />
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="hideOutOfStock" id="hideOutOfStock" value="true" @(Model.HideOutOfStock ? "checked" : "") onchange="this.form.submit()" />
                    <label class="form-check-label" for="hideOutOfStock">
                        Hide out-of-stock items
                    </label>
                </div>
            </div>
        </div>
    </form>
    
    <div class="row">
        @foreach (var product in Model.Products)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" />
                    <div class="card-body">
                        <h5 class="card-title">
                            @product.Name
                            @if (product.IsOutOfStock)
                            {
                                <span class="badge bg-secondary">Out of Stock</span>
                            }
                        </h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text"><strong>$@product.Price</strong></p>
                        @if (product.IsOutOfStock)
                        {
                            <button class="btn btn-secondary" disabled>Unavailable</button>
                        }
                        else
                        {
                            <button class="btn btn-primary">Add to Cart</button>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
    
    @if (!Model.Products.Any())
    {
        <div class="alert alert-info">
            No products found matching your criteria.
        </div>
    }
</div>
